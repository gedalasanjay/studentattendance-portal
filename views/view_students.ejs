<!DOCTYPE html>
<html>
<head>
    <title>View Students</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

<div class="card">
    <div class="card-header">ðŸ“‹ Registered Students</div>
    <div class="card-body">

        
        <table>
            <tr>
                <th>Roll No</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
            <% if (students.length > 0) { %>
                <% students.forEach(student => { %>
                    <tr>
                        <td><%= student.roll_no %></td>
                        <td><%= student.name %></td>
                        <td>
                            <a href="/admin/edit-student/<%= student.id %>" class="btn btn-edit">Edit</a>
                            <a href="/admin/delete-student/<%= student.id %>" class="btn btn-delete" onclick="return confirm('Delete this student?')">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="3">No students found</td>
                </tr>
            <% } %>
        </table>

        <br>
        <a href="/admin/add-student" class="btn btn-edit">âž• Add New Student</a>
    </div>
</div>

</body>
</html>
